<Window x:Class="CoffeeShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coffee Shop" Height="350" Width="500">
    <Grid>
        <Label Content="Coffee Type:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <ComboBox Name="cmbCoffeeType" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,20,0,0" Width="150" Height="20">
            <ComboBoxItem Content="Espresso"/>
            <ComboBoxItem Content="Latte"/>
            <ComboBoxItem Content="Cappuccino"/>
        </ComboBox>

        <Label Content="Toppings:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,60,0,0"/>
        <CheckBox Name="chkMilk" Content="Milk" HorizontalAlignment="Left" Margin="120,60,0,239" Width="55" />
        <CheckBox Name="chkSugar" Content="Sugar" HorizontalAlignment="Left" Margin="180,60,0,209"/>

        <Button Content="Order Coffee" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0" Width="120" Height="50" Click="btnOrderCoffee_Click"/>
        <TextBlock Name="txtOrderSummary" HorizontalAlignment="Left" Margin="20,140,0,0" Width="450" Height="150"/>
    </Grid>
</Window>
